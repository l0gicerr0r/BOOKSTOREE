option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: bookstore.wsgi:application
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "bookstore.settings"
    PYTHONBUFFERED: "TRUE"
    SECRET_KEY: "your-production-secret-key"  # Update before going live!
    DEBUG: "False"
    ALLOWED_HOSTS: "your-eb-env.elasticbeanstalk.com,www.yourdomain.com"  # Update before going live!

container_commands:
  01_migrate:
    command: "python manage.py migrate --noinput"
  02_collectstatic:
    command: "python manage.py collectstatic --noinput"
